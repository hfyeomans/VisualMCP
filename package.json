{
  "name": "@visualmcp/visual-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for visual feedback and UI testing automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --testPathIgnorePatterns='e2e' --passWithNoTests",
    "test:e2e": "jest --testMatch='**/__tests__/e2e/**/*.test.ts'",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "validate": "node validate-mcp.js",
    "demo": "node cli-tools/demo.js",
    "test-runner": "node cli-tools/test-runner.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "visual-testing",
    "screenshot",
    "ui-testing",
    "automation",
    "claude",
    "ai"
  ],
  "author": "Hank Yeomans <hank.yeomans@me.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hfyeomans/VisualMCP.git"
  },
  "bugs": {
    "url": "https://github.com/hfyeomans/VisualMCP/issues"
  },
  "homepage": "https://github.com/hfyeomans/VisualMCP#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "fs-extra": "^11.2.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "better-npm-audit": "^3.11.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "visual-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
